doctype html
html(ng-app='tyLienApp')
    head
        title=__("app.title")

        meta(name='viewport'    content='width=device-width, initial-scale=1')
        meta(name='robots'      content='index, follow, archive')
        meta(name='keywords'    content='bzh, bretagne, url, raccourcisseur, liens, petit')
        meta(name='description' content="L'unique raccourcisseur d'URL en .bzh ! Raccourcissez vos liens et proposez une URL 100% bretonne à destination de vos messages, réseaux sociaux...")

        link(rel='stylesheet', href='/bower_components/animate.css/animate.css')
        link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/style.css')
    body

        .background-image.animated.fadeIn

        .container
            .header
                nav
                    ul.nav.nav-pills.pull-right
                        li(class="#{ getLocale() == 'fr' ? 'active' : '' }").presentation
                            a(href='/i18n/fr') FR
                        li(class="#{ getLocale() == 'en' ? 'active' : '' }").presentation
                            a(href='/i18n/en') EN
                h1.title.animated.bounceInLeft= __("app.title")

            block content

            footer
                ul
                    li
                        a(href='http://github.com/tibus29/tylien.bzh' target='_blank')
                            span.footer-icon.github.animated
                    li
                        a(href='http://linkedin.com/in/thibaultpensec' target='_blank')
                            span.footer-icon.linkedin.animated
                    li
                        a(href='http://twitter.com/tibus29' target='_blank')
                            span.footer-icon.twitter.animated

        script(type='text/javascript' src='/bower_components/jquery/dist/jquery.min.js')
        script(type='text/javascript' src='/bower_components/angular/angular.min.js')
        script(type='text/javascript' src='/js/app.js')
        script(type='text/javascript').
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                            (i[r].q = i[r].q || []).push(arguments)
                        }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                        m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
