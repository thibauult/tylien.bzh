doctype html
html(ng-app='tyLienApp')
  head
    title=__("app.title")

    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='/bower_components/animate.css/animate.css')
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/css/style.css')
  body

    .background-image(class='animated fadeIn')

    .container
      .header
        nav
          ul.nav.nav-pills.pull-right
            li(class="#{ getLocale() == 'fr' ? 'active' : '' }").presentation
              a(href='/i18n/fr') FR
            li(class="#{ getLocale() == 'en' ? 'active' : '' }").presentation
              a(href='/i18n/en') EN
        h1.animated.bounceInLeft= __("app.title")

      block content

      footer
        ul
          li
            a(href='http://github.com/tibus29/tylien.bzh' target='_blank')
              span.footer-icon.github.animated
          li
            a(href='http://linkedin.com/in/thibaultpensec' target='_blank')
              span.footer-icon.linkedin.animated
          li
            a(href='http://twitter.com/tibus29' target='_blank')
              span.footer-icon.twitter.animated

    script(type='text/javascript' src='/bower_components/jquery/dist/jquery.min.js')
    script(type='text/javascript' src='/bower_components/angular/angular.min.js')
    script(type='text/javascript' src='/js/app.js')
    script(type='text/javascript').
